unit Unit1;

{$mode objfpc}{$H+}

interface

uses
  Classes, SysUtils, Forms, Controls, Graphics, Dialogs, StdCtrls, Math;

type

  { TForm1 }

  TForm1 = class(TForm)
    ButtonBerechnen: TButton;
    EditP: TEdit;
    EditQ: TEdit;
    LabelP: TLabel;
    LabelQ: TLabel;
    LabelD: TLabel;
    LabelX1: TLabel;
    LabelX2: TLabel;
    procedure ButtonBerechnenClick(Sender: TObject);
  private

  public

  end;

var
  Form1: TForm1;

implementation

{$R *.lfm}

{ TForm1 }

procedure TForm1.ButtonBerechnenClick(Sender: TObject);
var
  p, q : Double;
  D, x1, x2 : Double;
begin
  // Eingaben holen
  p := StrToFloat(EditP.Text);
  q := StrToFloat(EditQ.Text);

  // Diskriminante berechnen
  D := sqr(p) - 4*q;
  LabelD.Caption := 'Diskriminante D = ' + FloatToStr(D);

  // Prüfen, ob es Lösungen gibt
  if D < 0 then
  begin
    LabelX1.Caption := 'keine reelle Lösung';
    LabelX2.Caption := '';
  end
  else
  begin
    x1 := (-p + sqrt(D)) / 2;
    x2 := (-p - sqrt(D)) / 2;

    if x1 = x2 then
    begin
      LabelX1.Caption := 'eine Lösung: x = ' + FloatToStr(x1);
      LabelX2.Caption := '';
    end
    else
    begin
      LabelX1.Caption := 'x1 = ' + FloatToStr(x1);
      LabelX2.Caption := 'x2 = ' + FloatToStr(x2);
    end;
  end;
end;

end.
